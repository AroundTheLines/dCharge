<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nioth.dev.dcharge.HomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/patient_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/headshot"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp" />

    <Button
        android:layout_width="wrap_content"
        android:width= "250dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/begin_test_button"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/patient_image"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/begin_test_button"
        android:layout_marginTop="50dp"
        >
        <at.markushi.ui.CircleButton
             android:layout_height="100dip"
            android:layout_width="0px"
            android:layout_weight="1"
            android:src="@android:drawable/ic_dialog_email"
            android:id="@+id/heart_rate_history_button"
            app:cb_color="#99CC00"
            app:cb_pressedRingWidth="8dip"
            />
        <at.markushi.ui.CircleButton
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="100dip"
            android:src="@android:drawable/ic_dialog_email"
            android:id="@+id/response_history_button"
            app:cb_color="#99CC00"
            app:cb_pressedRingWidth="8dip"
            />

        <at.markushi.ui.CircleButton
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="100dip"
            android:src="@android:drawable/ic_dialog_email"
            android:id="@+id/hospital_info"
            app:cb_color="#99CC00"
            app:cb_pressedRingWidth="8dip"
            />

    </LinearLayout>

</RelativeLayout>
