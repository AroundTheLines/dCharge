<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/theme_dialer_primary"
    tools:context="nioth.dev.dcharge.HomeActivity">




    <TextView
    android:layout_width="wrap_content"
    android:text="Umesh Khanna"
    android:id="@+id/title"
    android:layout_height="wrap_content"
    android:textColor="#fff"
    android:layout_gravity="center"
    android:textSize="25dp"
    android:layout_marginTop="10dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:id="@+id/back_button"
        android:layout_marginLeft="370dp"
        android:src="@drawable/signout" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/patient_image"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:src="@drawable/headshot"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />

    <Button
        android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:text="Request Doctor"
        android:textSize="16dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/call_doctor_button"
        android:layout_marginTop="50dp"
        android:textColor="#fff"
        android:layout_below="@+id/patient_image"
        android:background="#8BC34A"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/call_doctor_button"
        android:layout_marginTop="70dp"
        android:id="@+id/linearLayout">
        <at.markushi.ui.CircleButton
             android:layout_height="100dip"
            android:layout_width="0px"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_agenda"
            android:id="@+id/heart_rate_history_button"
            app:cb_color="#8BC34A"
            app:cb_pressedRingWidth="8dip"
            />
        <at.markushi.ui.CircleButton
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="100dip"
            android:src="@android:drawable/ic_menu_agenda"
            android:id="@+id/response_history_button"
            app:cb_color="#8BC34A"
            app:cb_pressedRingWidth="8dip"
            />

        <at.markushi.ui.CircleButton
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="100dip"
            android:src="@android:drawable/ic_menu_agenda"
            android:id="@+id/hospital_info"
            app:cb_color="#8BC34A"
            app:cb_pressedRingWidth="8dip"
            />

    </LinearLayout>

    <!--<ImageButton-->
        <!--android:layout_width="15dp"-->
        <!--android:layout_height="15dp"-->
        <!--android:background="@color/theme_dialer_primary"-->
        <!--android:id="@+id/imageButton"-->
        <!--android:src="@drawable/back"-->
        <!--android:layout_marginTop="15dp"-->
        <!--android:layout_marginLeft="30dp"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentStart="true" />-->

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="48dp"
        android:background="#8BC34A"
        android:src="@drawable/heart" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="495dp"
        android:layout_marginLeft="323dp"
        android:background="#8BC34A"
        android:src="@drawable/hospital" />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="495dp"
        android:layout_marginLeft="187dp"
        android:background="#8BC34A"
        android:src="@drawable/form" />

</RelativeLayout>
